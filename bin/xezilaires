#!/usr/bin/env php
<?php

use Xezilaires\Bridge\Symfony\AppKernel;
use Xezilaires\Bridge\Symfony\Console\Application;

if (version_compare('7.1.0', PHP_VERSION, '>')) {
    fwrite(STDERR, 'Xezilaires requires PHP 7.1+'.PHP_EOL);
    exit(1);
}

if (PHP_SAPI !== 'cli') {
    fwrite(STDERR, 'Xezilaires must be invoked via CLI version of PHP'.PHP_EOL);
    exit(1);
}

require __DIR__.'/../src/bootstrap.php';

if (false === class_exists(\Symfony\Bundle\FrameworkBundle\FrameworkBundle::class)) {
    fwrite(STDERR, 'Xezilaires requires symfony/framework-bundle'.PHP_EOL);
    exit(1);
}

if (false === ini_get('date.timezone')) {
    ini_set('date.timezone', 'UTC');
}

$kernel = new AppKernel('prod', false);
$kernel->boot();

$application = new Application($kernel);
$application->run();
